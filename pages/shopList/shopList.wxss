page{
	background-color: #fff;
}
.shop{
  padding: 20rpx;
  border-bottom: 1rpx solid #ddd;
  display: flex;
  position: relative;
}
.shop-img{
  width: 160rpx;
  height:  160rpx;
}
.shop-info{
	margin-left: 10rpx;
	width:520rpx;
	display: flex;
	flex-direction: column;
	font-size: 12px;
	line-height: 1.5;
}
.shop-title{
	font-size: 16px;
	font-weight: 580;
	color: #333;
	/*设置标题过长溢出省略*/
	width: 380rpx;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}
.shop-star{
	position:absolute;
	right:20rpx;
	top:20rpx;
}
.shop-time{
	color: red;
}
.star-after{
	color: #e2e2e2;
}
.star-before{
	position: absolute;
	color: #FE6700;
	top: 0;
	left:0;
	overflow: hidden;
}