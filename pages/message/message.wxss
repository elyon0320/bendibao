page{
  background-color: #f1f1f1
}
.card{
background-color: #fff;
border: 1rpx solid #ddd;
border-radius: 10rpx;
margin: 60rpx 20rpx;
padding: 20rpx 25rpx;
display: flex;
flex-direction: column
}
.card-title{
  font-size: 20px;
  margin-bottom: 20rpx;
  
  /* width: 380rpx; */
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.card-date{
  font-size: 14px;
  color: #ccc;
  border-bottom: 1rpx solid #ddd;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
}
.card-img{
  width: 100%;
  height: 250rpx;
}
.card-desc{
  font-size: 16px;
  color: #333;
  border-bottom: 1px solid #ddd;
  margin: 20rpx 0;
  padding-bottom: 20rpx;
}
.card-read{
  font-size: 14px;
  color: #666;
  display:flex;
  justify-content: space-between;
  align-items: center;
}
.card-read::after{
	content: "";
	width: 15rpx;
	height: 15rpx;
	border-top: 3rpx solid #ccc;
	border-right: 3rpx solid #ccc;
	transform: rotate(45deg);
	display: block;
}

